---
import Layout from '~/layouts/Layout.astro';
import ContentGrid from '~/components/widgets/ContentGrid.astro';
import Header from '~/components/widgets/Header.astro';

// 创建16个内容项，交替使用两种图片
const contentItems = Array(16).fill(null).map((_, index) => ({
  title: `内容项 ${index + 1}`,
  description: '这是一个内容项的描述，展示在网格布局中。',
  link: '#',
  image: {
    src: index % 2 === 0 ? '/hero-image.png' : '/default.png',
    alt: `内容项 ${index + 1} 的图片`,
    width: 400,
    height: 300
  }
}));

const navItems = [
  { text: 'Home', href: '/' },
  { text: 'Blog', href: '/blog' },
  { text: 'About', href: '/about' },
  { text: 'Contact', href: '/contact' },
];

const metadata = {
  title: '首页',
  description: '欢迎访问我们的网站',
};
---

<Layout metadata={metadata}>
  <div class="header-container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <Header links={navItems} isSticky showToggleTheme position="right" />
  </div>
  <main class="flex-1">
    <section class="py-12 sm:py-16 lg:py-20">
      <div class="mx-auto max-w-7xl px-4 sm:px-6">
        <div class="mb-12 text-center">
          <h1 class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading intersect-once intersect:fade-up">
            欢迎来到我们的网站
          </h1>
          <p class="text-xl text-gray-600 dark:text-slate-400 intersect-once intersect:fade-up intersect-delay-150">
            浏览我们精心准备的内容
          </p>
        </div>
        
        <ContentGrid 
          items={contentItems} 
          columns={4} 
          defaultStyles={true} 
          classes={{
            container: 'intersect-once',
            item: 'intersect-once'
          }}
        />
      </div>
    </section>
  </main>
</Layout>

<style>
  .header-container {
    width: 100%;
  }
  
  .fade-in {
    animation: fadeInAnimation 0.6s ease forwards;
    animation-delay: var(--animation-delay, 0ms);
  }

  @keyframes fadeInAnimation {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
